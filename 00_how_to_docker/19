docker container run --name Abathur -dt -v ~/docker_python:/root -p 3000:3000 python:2-slim
docker exec Abathur pip install flask
echo 'from flask import Flask\napp = Flask(__name__)\n@app.route("/")\ndef hello_world():\n\treturn "<h1>Hello, World!</h1>"' > ~/docker_python/app.py
docker exec -e FLASK_APP=/root/app.py Abathur flask run --host=0.0.0.0 --port 3000
